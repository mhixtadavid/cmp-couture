                <ul class="menu-drop">
                    <li class="item3"><a href="/store/men">Men wears</a>
                    </li>
                    <li class="item2"><a href="/store/women">Women Wears</a>
                    </li>
                    <li class="item2"><a href="/store/kids">Kids Wears</a>
                    </li>
                    <li class="item2"><a href="/store/accessories">Accessories</a>
                    </li>
                </ul>
            </div>                        
        </div>
    <div class="clearfix"> </div>
</div>
</div>

